<Window x:Class="ForbbidenIslandFEI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:props="clr-namespace:ForbbidenIslandFEI.Properties"
        mc:Ignorable="d"
        Title="{x:Static props:Resources.Register_Title}"
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="{x:Static props:Resources.Register_Title}"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Usuario -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,5,0,0">
            <TextBlock Text="{x:Static props:Resources.Username_Label}"/>
            <TextBox x:Name="txtUsername" Width="300"/>
        </StackPanel>

        <!-- Correo -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,5,0,0">
            <TextBlock Text="{x:Static props:Resources.Email_Label}"/>
            <TextBox x:Name="txtEmail" Width="300"/>
        </StackPanel>

        <!-- Contraseña -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,5,0,0">
            <TextBlock Text="{x:Static props:Resources.Password_Label}"/>
            <PasswordBox x:Name="pwdPassword" Width="300"/>
        </StackPanel>

        <!-- Botón de registro -->
        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnRegister" Content="{x:Static props:Resources.Register_Button}" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
